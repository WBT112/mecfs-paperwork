{
  "name": "mecfs-paperwork-app",
  "private": true,
  "license": "Apache-2.0",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/sync-formpacks.mjs && node scripts/sync-funding.mjs",
    "prebuild": "node scripts/sync-formpacks.mjs && node scripts/sync-funding.mjs",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "tsc --noEmit",
    "formpack:new": "node scripts/new-formpack.mjs",
    "formpack:validate": "node scripts/validate-formpacks.mjs",
    "pretest:e2e": "node scripts/sync-formpacks.mjs && node scripts/sync-funding.mjs",
    "test:e2e": "node scripts/run-e2e-soft.mjs",
    "test:e2e:strict": "npx playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test": "vitest --run",
    "test:unit": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@rjsf/core": "^6.1.2",
    "@rjsf/utils": "^6.1.2",
    "@rjsf/validator-ajv8": "^6.1.2",
    "@types/sanitize-html": "^2.16.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "buffer": "^6.0.3",
    "docx-templates": "^4.15.0",
    "events": "^3.3.0",
    "i18next": "^23.12.0",
    "idb": "^8.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.3",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.30.3",
    "sanitize-html": "^2.17.0",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "jszip": "^3.10.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "typescript": "5.5.4",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  }
}
